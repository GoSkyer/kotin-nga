<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#fff"
             android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:src="@mipmap/remen"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/iv_icon_loan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25px"
                android:scaleType="centerCrop"
                tools:src="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/tv_name_loan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:textColor="#333"
                android:textSize="30px"
                tools:text="拍拍贷"
                />

            <TextView
                android:id="@+id/tv_join_count_loan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18px"
                android:textColor="#999"
                android:textSize="22px"
                tools:text="拍拍贷"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="28px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left">

                <TextView
                    android:id="@+id/tv_rate_type_loan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月利率"
                    android:textColor="#666"
                    android:textSize="24px"
                    />

                <TextView
                    android:id="@+id/tv_rate_loan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:textColor="#ff5250"
                    android:textSize="24px"
                    tools:text="0.3%"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高额度"
                    android:textColor="#666"
                    android:textSize="24px"
                    />

                <TextView
                    android:id="@+id/tv_credit_max_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:textColor="#ff5250"
                    android:textSize="24px"
                    tools:text="3万"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:text="成功率"
                    android:textColor="#666"
                    android:textSize="24px"
                    />

                <TextView
                    android:id="@+id/tv_success_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:textColor="#ff5250"
                    android:textSize="24px"
                    tools:text="3万"
                    />
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e5e5e5"/>

        <co.lujun.androidtagview.TagContainerLayout
            android:id="@+id/tag_view_hoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="28px"
            android:layout_marginRight="28px"
            android:layout_marginTop="15px"
            app:container_background_color="#00ffffff"
            app:container_border_color="#00ffffff"
            app:container_enable_drag="false"
            app:horizontal_interval="5dp"
            app:tag_background_color="#00ffffff"
            app:tag_border_color="#e5e5e5"
            app:tag_clickable="false"
            app:tag_corner_radius="15dp"
            app:tag_text_color="#999"
            app:tag_text_size="11dp"
            app:tag_theme="none"
            app:vertical_interval="5dp"/>
    </LinearLayout>
</FrameLayout>